#!/usr/bin/env bash
#------------------------------------------
# success_or_failure - Helper function used to generate either/or text.

thisdir=$(dirname $BASH_SOURCE)
. $thisdir/common.sh

if [[ "$1" =~ --?h.* ]]
then
  cat <<EOF
success_or_failure - Helper function used to generate either/or text.
usage: success_or_failure \$? "true_string" "false_string".
For example, this call to success_or_failure:
    info '  succeeded?  \$(success_or_failure \$? "yes" "no")'
will return "yes" if \$? is 0, otherwise "no".
Contrast with bin/true_or_false.
EOF
exit 0
fi

if [ $1 -eq 0 ]
then
  echo $2
else
  echo $3
fi

