#!/usr/bin/env bash
#------------------------------------------
# success_or_failure - Helper function used to generate either/or text.

thisdir=$(dirname $BASH_SOURCE)
. $thisdir/common.sh

if [[ "$1" =~ --?h.* ]]
then
  cat <<EOF
$0 - Helper function used to generate either/or text.

Usage: $0 N "true_string" "false_string".

Where:
  N             An integer, where 0 means success and nonzero means failure.
  true_string   What to return on success.
  false_string  What to return on failure.

Consider this example:

    do_something
    info 'succeeded?  \$($0 \$? "yes" "no")'

The string "yes" is returned if \$? is 0 (the status result of "do_something"),
otherwise "no". Contrast with "true_or_false".
EOF
exit 0
fi

if [ $1 -eq 0 ]
then
  echo $2
else
  echo $3
fi

