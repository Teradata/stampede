#!/usr/bin/env bash
#------------------------------------------
# log-file - Return the log file being used or "SYSLOG(1)".

thisdir=$(dirname $BASH_SOURCE)
. $thisdir/common.sh

if [[ "$1" =~ --?h.* ]]
then
  cat <<EOF
log-file - Return the log file being used or the string "SYSLOG(1)".
EOF
exit 0
fi

if [ $STAMPEDE_LOG_USE_SYSLOG -eq 0 ]
then
  echo "SYSLOG(1)"
else
  echo "$STAMPEDE_LOG_DIR/$STAMPEDE_LOG_FILE"
fi
