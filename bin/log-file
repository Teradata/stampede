#!/usr/bin/env bash
#------------------------------------------
# log-file - Return the log file being used or "SYSLOG".

thisdir=$(dirname $BASH_SOURCE)
. $thisdir/common.sh

if [[ "$1" =~ --?h.* ]]
then
  cat <<EOF
$0 - Return the log file being used or the string "SYSLOG".

Usage: $0
EOF
exit 0
fi

if [ $STAMPEDE_LOG_USE_SYSLOG -eq 0 ]
then
  echo "SYSLOG"
else
  echo "$STAMPEDE_LOG_DIR/$STAMPEDE_LOG_FILE"
fi
